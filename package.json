{
  "name": "star-wars-api",
  "version": "1.0.0",
  "description": "Star Wars REST and GraphQL API",
  "main": "rest/server.js",
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "start": "node rest/server.js",
    "start:graphql": "node graphql/server.js",
    "test": "mocha test/*.test.js --timeout 15000 --exit",
    "test:rest": "mocha test/*-controller.test.js test/rest-api.test.js test/basic-api.test.js rest/test/*.test.js --timeout 15000 --exit",
    "test:rest-endpoints": "mocha rest/test/*.test.js --timeout 15000 --exit",
    "test:graphql": "mocha graphql/test/*.js --timeout 15000 --exit",
    "test:unit": "mocha test/*-controller.test.js test/graphql-resolvers.test.js --timeout 15000 --exit",
    "test:integration": "mocha test/rest-api.test.js test/basic-api.test.js --timeout 15000 --exit",
    "test:report": "mocha test/*.test.js --timeout 15000 --exit --reporter mochawesome --reporter-options reportDir=test-results,reportFilename=test-report",
    "test:coverage": "nyc mocha test/*.test.js --timeout 15000 --exit"
  },
  "keywords": [
    "api",
    "star-wars",
    "graphql",
    "rest",
    "nodejs",
    "express",
    "apollo"
  ],
  "author": "Rogerio Portilho Gon√ßalves",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.1",
    "mochawesome": "^7.1.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rogerportilho/star-wars-api.git"
  },
  "bugs": {
    "url": "https://github.com/rogerportilho/star-wars-api/issues"
  },
  "homepage": "https://github.com/rogerportilho/star-wars-api#readme"
}